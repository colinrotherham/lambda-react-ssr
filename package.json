{
  "name": "@colinrotherham/lambda-react-ssr",
  "version": "1.0.0",
  "description": "React server-side rendered HTML via Node.js AWS Lambda function",
  "author": "Colin Rotherham",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=13.2.0 <15.0.0"
  },
  "scripts": {
    "test": "NODE_ENV=test npm-run-all test:* --continue-on-error",
    "test:audit": "npm audit",
    "test:lint": "eslint ./src *.js --ext .js,.jsx,.mjs",
    "test:dependencies": "npm ls --depth=0",
    "test:unit": "jest",
    "prebuild": "node --experimental-json-modules ./build/prepare.mjs",
    "build": "NODE_ENV=production npm-run-all build:*",
    "build:format": "standard --fix ./src *.{js,jsx,mjs}",
    "build:compile": "webpack --config ./build/webpack/index.cjs",
    "build:zip": "cd ./dist && zip -rq ../package.zip .",
    "start": "node --inspect ./dist/server.js"
  },
  "dependencies": {
    "ansi-colors": "^4.1.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "babel-loader": "^8.0.6",
    "babel-plugin-source-map-support": "^2.1.1",
    "del": "^5.1.0",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "react-test-renderer": "^16.12.0",
    "standard": "^14.3.1",
    "typescript": "^3.7.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "standard": {
    "ignore": [
      "dist/"
    ]
  }
}
